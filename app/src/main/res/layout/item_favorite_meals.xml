<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="@dimen/_150sdp"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical"
    android:background="@drawable/favorite_item_background">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/favorite_meals_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/favorite_meals_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:layout_marginTop="4dp"
        android:gravity="start"
        android:lines="1"
        android:text="@string/meals_name"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorite_meals_image" />

    <TextView
        android:id="@+id/favorite_meals_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_name"
        android:textColor="@color/itemIconTint"
        android:layout_margin="@dimen/_5sdp"
        android:textSize="@dimen/_11ssp"
        android:gravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorite_meals_name"
        app:layout_constraintVertical_bias="0.473" />

    <ImageButton
        android:id="@+id/favorite_meals_ImageButton_favorite"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_weight="1"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/hint3"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_favorite_meals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/favorite_meals_restaurant_name" />


</androidx.constraintlayout.widget.ConstraintLayout>